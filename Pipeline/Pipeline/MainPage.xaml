<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pipeline.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                x:Name="Title"
                Text="Title"
                Style="{StaticResource SubHeadline}" />


            <Label
                x:Name="Blurb"
                Text="Blurb"
                Style="{StaticResource SubHeadline}" />


            <Label
                x:Name="Author"
                Text="Author"
                Style="{StaticResource SubHeadline}"/>

            <Button
                x:Name="NextBtn"
                Text="Next" 
                Clicked="OnNextBtnClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
